/* components/addCarts/addCarts.wxss */
/* 固定栏 */
.fix-box{
  height: 100rpx;
  width: 100%;
  position: fixed;
  bottom: 0;
  left: 0;
  box-sizing: border-box;
  z-index: 999;
  border-top: 1rpx solid #d2d2d2;
  background-color: #fff;
}
.index,.cart{
  width: 15%;
  float: left;
  box-sizing: border-box;
  font-size: 22rpx;
  text-align: center;
  padding-top: 10rpx;
  color: #8a8a8a;
}
.index{
  padding-left: 10rpx;
}
.cart{
  padding-right: 18rpx;
}
.index-img image{
  width: 50rpx;
  height: 50rpx;
}
.cart-img image{
  width: 50rpx;
  height: 50rpx;
}
.cart-img{
  position: relative;
}
.num{
  /* padding: 4rpx; */
min-width:30rpx;
height:30rpx;
text-align: center;
z-index:1000;
border-radius:50%;
background-color:#e3393c;
position:absolute;
left:64rpx;
top:-4rpx;
font-size:20rpx;
color:#fff;
}
.addOne{
width:30rpx;
height:30rpx;
color:#f51e48;
z-index:1001;
font-size:30rpx;
position:absolute;
left:60rpx;
top:-12rpx;
font-weight: 900;
opacity: 0;

}
.box-right{
  width: 70%;
  box-sizing: border-box;
  float: left;
}
.add-cart,.buy{
  width: 50%;
  line-height: 100rpx;
  color: #fff;
  font-size: 28rpx;
  text-align: center;
  float: left;
  box-sizing: border-box;
}
.add-cart{
background-color: #ff9600;
}
.buy{
background-color: #e3393c;
}
