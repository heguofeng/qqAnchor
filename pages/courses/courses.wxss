.content-box{
   padding:15rpx;  
   width: 100%;
   box-sizing: border-box;
   overflow: hidden;

   /* display: flex;
   flex-direction: row;
   flex-wrap: wrap;
   justify-content: space-around;
   align-items: center; */
}
.crad{
  float: left;
  margin: 15rpx;
  /* margin-bottom: 30rpx;  */
  width: 330rpx;
  box-sizing: border-box; 
  height: 416rpx;
  background-color: #f6f6f6;
  overflow: hidden;
}
.crad .img{
    width: 100%;
  height: 200rpx;
  overflow: hidden;
}
.crad .img image{
  width: 100%;
  height: 200rpx;
}
.crad .info{
  float: left;
}
.info .title{
  height: 90rpx;
  width: 100%;
  padding: 10rpx;
  box-sizing: border-box;
  font-weight: 700;
  display: -webkit-box;
  font-size: 24rpx;
   line-height: 39rpx;  
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:2;
  overflow: hidden;
  text-overflow: ellipsis;
}
.date{
  height: 50rpx;
  width: 100%;
  box-sizing: border-box;
  padding-left: 14rpx;
  line-height: 50rpx;
}
.date image{
  width: 26rpx;
  height: 26rpx;
  margin-right: 14rpx;
  margin-top: 10rpx;
  float: left;
}
.date text{
  font-size: 20rpx;
  color: #b2b2b2;
  float: left;
}
.author{
  height: 66rpx;
  width: 100%;
  box-sizing: border-box;
  padding-right: 14rpx;
  line-height: 66rpx;
  text-align: right;
}
.author image{
  height: 50rpx;
  width: 50rpx;
  border-radius: 50%;
  float: right;
  margin-top: 10rpx;
}
.author text{
  font-size: 22rpx;
  color: #3c3c3c;
  margin-right: 16rpx;
  font-weight: 700;
}