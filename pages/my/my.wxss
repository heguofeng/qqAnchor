/* pages/my/my.wxss */
page{
  height: 100%;
}
.container{
  background-color: #f2f2f2;
}
.head{
  width: 100%;
  height: 322rpx;
  /* box-sizing: border-box; */
  text-align: center;
  border-bottom: 1px solid #e3e3e3;
  padding-top: 20rpx;
  background-color: #fff;
  margin-bottom: 15rpx;
  box-sizing: border-box;
}
.userinfo-head{
  width: 100%;
  height: 322rpx;
   box-sizing: border-box; 
  text-align: center;
  border-bottom: 1px solid #e3e3e3;
  padding-top: 20rpx;
  /* background-color: #fff; */
  margin-bottom: 15rpx;
  overflow: hidden;

}
.bgPic{
  width: 100%;
  height: 320rpx;
  position: absolute;
  left: 0;
  top: 0;
  filter: blur(3px);
}
.head-img{
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  border: 2px solid #f2f2f2;
  overflow: hidden;
  margin:  0 auto;
  z-index: 10;
    position: relative;
}
.userinfo-avatar{
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  border: 2px solid #f2f2f2;
  overflow: hidden;
  margin:  0 auto;
  margin-top: 20rpx;
  z-index: 10;
    position: relative;
}
.head-img image,.userinfo-avatar image{
  width: 100%;
  height: 100%;
  z-index: 10;
    position: relative;
}
.warn-txt{
  /* margin: 30rpx auto; */
  width: 100%;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  color: #c2c2c2;
  display: block;
  font-size: 28rpx;
  z-index: 10;
    position: relative;
}
.userinfo-nickname{
  width: 100%;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  color: #fff;
  display: block;
  font-size: 30rpx;
  margin-top: 10rpx;
  z-index: 10;
    position: relative;
}
.head .login-box{
  margin: 0 auto;
  width: 430rpx;
  height: 70rpx;
  text-align: center;
  line-height: 70rpx;
  border-radius: 30px;
  color: #ffffff;
  background-color: #f51e48;
  z-index: 10;
  position: relative;
}
.head .login-box:active{
  color: #c2c2c2;
}
.menu{
   border-top: 1px solid #e3e3e3; 
}
.row{
  width: 100%;
  height: 164rpx;
  box-sizing: border-box;
  overflow: hidden;
  /* margin-bottom: -2rpx; */
  background-color: #fff;
  /* border-top: 1px solid #e3e3e3; */
  border-bottom: 1px solid #e3e3e3;
}
.box{
  width: 50%;
  float: left;
   box-sizing: border-box; 
  text-align: center;
  padding: 20rpx 0;
   border-right: 1px solid #e3e3e3; 
}
/* .box  */
.box image{
  width: 80rpx;
  height: 80rpx;
}
.box text{
  display: block;
  width: 100%;
  height: 40rpx;
  line-height: 40rpx;
  font-size: 28rpx;
  text-align: center;
  color: #8a8a8a;
}

.loginOut{
  width: 100%;
  height: 80rpx;
  background-color: #fff;
  line-height: 80rpx;
  margin-top: 20rpx;
  text-align: center;
  font-size: 28rpx;
  color: #8a8a8a;
}
.loginOut:active{
  color: #f51e48;
}